<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ceryle_radioRealButton_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/ceryle_radioRealButton_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_launcher"
        android:tint="@color/indigo_500"/>

    <TextView
        android:id="@+id/ceryle_radioRealButton_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="Button"
        android:textColor="@color/indigo_700"/>
</LinearLayout>
